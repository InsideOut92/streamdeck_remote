{
  "name": "streamdeck-remote",
  "version": "1.1.0",
  "private": true,
  "description": "Touch launcher app similar to Stream Deck with configurable profiles and pages.",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "test": "node --test tests/*.test.js",
    "build:win": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/build-win.ps1",
    "build": "npm run build:win"
  },
  "dependencies": {
    "express": "^5.2.1"
  },
  "pkg": {
    "scripts": [
      "server.js"
    ],
    "assets": [
      "public/**/*"
    ]
  },
  "devDependencies": {
    "@yao-pkg/pkg": "^6.14.1"
  }
}
